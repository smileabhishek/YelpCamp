<% layout('layouts/boilerplate') %>
<div id="map" style="width: 100%; height: 50vh"></div>
<h1>All campgrounds</h1>
<div>
  <a href="/campgrounds/new">Add new campground</a>
  <a href="/">Home</a>
</div>

<% for(let campground of campgrounds) {%>
<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <!-- if campground.image is null, use default image -->
      <% if(campground.images.length){ %>
      <img
        src="<%= campground.images[0].url %>"
        class="img-fluid"
        alt="campground image"
      />
      <% }else{ %>
      <img
        src="https://res.cloudinary.com/dfyaqdmh8/image/upload/v1644359159/YelpCamp/photo-1539629213911-66eac000dd0b_ocurrx.jpg"
        class="img-fluid"
        alt="default image"
      />
      <% } %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h1 class="card-title"><%= campground.title %></h1>
        <p class="card-text"><%= campground.description %></p>
        <p class="card-text">
          <small class="text-muted"><%= campground.location %> </small>
        </p>
        <a href="/campgrounds/<%= campground._id %> " class="btn-primary btn"
          >View <%= campground.title %></a
        >
      </div>
    </div>
  </div>
</div>
<% }%>
<script>
  const mapToken = "<%- process.env.MAPBOX_TOKEN %>";
  const campgrounds = {features: <%- JSON.stringify(campgrounds) %>};
</script>
<script src="/javascript/clusterMap.js"></script>
